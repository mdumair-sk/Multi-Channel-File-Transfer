<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dual Channel File Transfer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- File Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Selection"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/selectFileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select File" />

        <TextView
            android:id="@+id/filePathText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:layout_marginBottom="16dp" />

        <!-- Channel Configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channels"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- USB Configuration -->
        <CheckBox
            android:id="@+id/usbCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable USB Channel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/usbHostEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="USB Host"
                android:inputType="textNoSuggestions" />

            <EditText
                android:id="@+id/usbPortEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Port"
                android:inputType="number"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- WiFi Configuration -->
        <CheckBox
            android:id="@+id/wifiCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable WiFi Channel"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/wifiHostEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="WiFi Host IP"
                android:inputType="textNoSuggestions" />

            <EditText
                android:id="@+id/wifiPortEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Port"
                android:inputType="number"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Transfer Control -->
        <Button
            android:id="@+id/transferBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Transfer"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Progress Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress: 0%" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready"
            android:layout_marginBottom="16dp" />

        <!-- Logs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="#f0f0f0"
            android:padding="8dp"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:minHeight="100dp" />

    </LinearLayout>

</ScrollView>