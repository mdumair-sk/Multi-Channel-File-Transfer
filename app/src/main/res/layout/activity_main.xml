<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Header with title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Transfer"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Action buttons card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="File Management"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/addFilesButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add Files"
                            android:backgroundTint="#4CAF50"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/settingsButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Settings"
                            android:backgroundTint="#2196F3"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/clearQueueButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Clear Queue"
                            android:backgroundTint="#F44336"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Start Transfer Button -->
                    <Button
                        android:id="@+id/startTransferButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Transfers"
                        android:backgroundTint="#FF9800"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:enabled="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Status card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transfer Status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready to transfer files"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <ProgressBar
                        android:id="@+id/globalProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/queueStatsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Queue: 0 files (0 B) • Active: 0 • Pending: 0"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Queue header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transfer Queue"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/queueCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 files"
                    android:textSize="14sp"
                    android:textColor="#666"/>
            </LinearLayout>

            <!-- Transfer queue card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/queueRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:maxHeight="400dp"
                        android:padding="8dp"/>

                    <!-- Empty state -->
                    <LinearLayout
                        android:id="@+id/emptyStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@android:drawable/ic_menu_upload"
                            android:alpha="0.3"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No files in queue"
                            android:textSize="16sp"
                            android:textColor="#999"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap 'Add Files' to get started"
                            android:textSize="12sp"
                            android:textColor="#BBB"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Help text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip: Swipe left to cancel a transfer, swipe right to pause/resume"
                android:textSize="12sp"
                android:textColor="#888"
                android:gravity="center"
                android:padding="8dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>